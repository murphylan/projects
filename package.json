{
  "name": "murphy",
  "version": "1.0.0",
  "description": "Murphy - 现代化全栈应用框架",
  "private": true,
  "workspaces": [
    "frontend",
    "doc"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "backend:mvc": "cd backend-mvc && ./gradlew bootRunDev",
    "backend:webflux": "cd backend-webflux && ./gradlew bootRunDev",
    "backend:both": "concurrently \"pnpm backend:mvc\" \"pnpm backend:webflux\""
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "nextjs",
    "react",
    "spring-boot",
    "java",
    "fullstack"
  ],
  "author": "Murphy Team",
  "license": "MIT"
}