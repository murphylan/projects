# 环境变量配置示例

# 复制此文件为 .env.local 并修改相应的值

# ===========================================
# 前端环境变量 (frontend/.env.local)
# ===========================================

# API 基础URL
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# 应用环境
NEXT_PUBLIC_APP_ENV=development

# 应用版本
NEXT_PUBLIC_APP_VERSION=1.0.0

# 启用调试模式
NEXT_PUBLIC_DEBUG=true

# CDN 配置
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# 第三方服务配置
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# 后端环境变量 (backend/.env)
# ===========================================

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yzt_db
DB_USERNAME=yzt_user
DB_PASSWORD=yzt_password

# MongoDB 配置
MONGODB_URI=mongodb://localhost:27017/yzt_mongo

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka 配置
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# RabbitMQ 配置
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# JWT 配置
JWT_SECRET=your-very-long-secret-key-here-that-should-be-at-least-256-bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# OAuth2 配置
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 文件上传配置
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB

# 邮件配置
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# 监控配置
PROMETHEUS_ENABLED=true
ACTUATOR_SECURITY_ENABLED=false

# ===========================================
# Docker 环境变量 (.env)
# ===========================================

# Docker Compose 相关
COMPOSE_PROJECT_NAME=murphy

# 数据库配置
POSTGRES_DB=yzt_db
POSTGRES_USER=yzt_user
POSTGRES_PASSWORD=yzt_password

# Redis 配置
REDIS_PASSWORD=

# Kafka 配置
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181

# Elasticsearch 配置
ELASTIC_PASSWORD=elastic_password

# Grafana 配置
GF_SECURITY_ADMIN_PASSWORD=admin

# ===========================================
# 生产环境变量 (.env.production)
# ===========================================

# 前端生产配置
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_DEBUG=false

# 后端生产配置
SPRING_PROFILES_ACTIVE=prod
DB_HOST=prod-postgres
DB_PASSWORD=secure-production-password
REDIS_HOST=prod-redis
JWT_SECRET=super-secure-production-secret-key

# SSL 证书配置
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# 外部服务配置
SENTRY_DSN=https://your-production-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# CDN 配置
CDN_URL=https://cdn.yourdomain.com
STATIC_ASSETS_URL=https://static.yourdomain.com